Aterm*scrollBar: true
Aterm*transparent: true
Aterm*title: Terminal
Aterm*foreground: #00cd00
Aterm*background: #000000
Aterm*font: fixed
Aterm*cursorColor: #00cd00
Aterm*fading: 70
Aterm*shading: 50
! Aterm*color12: DodgerBlue1
Aterm*saveLines: 1000
fltk*scheme: gtk+
Xft.dpi: 96.0

!xterm font and locale
xterm.locale:true
xterm.utf8: true
xterm*utf8Title:true
xterm*fontMenu*fontdefault*Label:Default

! copy & paste
Shift <KeyPress> Insert:insert-selection(CLIPBOARD, CUT_BUFFER1) \n\
~Shift~Ctrl<Btn2Up>: insert-selection(PRIMARY, CUT_BUFFER0) \n\
~Shift<BtnUp>: select-end(CLIPBOARD, CUT_BUFFER1) \n\
~Shift<BtnUp>: select-end(PRIMARY, CUT_BUFFER0)
XTerm*VT100.Translations: #override <Btn1UP>:select-end(PRIMARY,CLIPBOARD,CUT_BUFFERO)

!Alt
xterm*eightBitInput:false
xterm*altSendsEscape:true

!English font
xterm*faceName: DejaVu Sans Mono:antialias=True:pixelsize=13
!Chinese font
xterm*faceNameDoublesize:WenQuanYi Zen Hei Mono:antialias=True:pixelsize=13


!input method
XTerm*inputMethod:fictx

!scrollbar
XTerm*rightScrollBar: true
! XTerm*SaveLines: 4096
XTerm*jumpScroll: true

! special
*.foreground:	#00cd00
*.background:	#282a36
*.cursorColor:	#00cd00

